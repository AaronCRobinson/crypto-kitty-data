{
  "name": "ckd-ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "npm run css-watch | vue-cli-service serve --open",
    "build": "npm run css-build && vue-cli-service build",
    "lint": "vue-cli-service lint",
    "css-deploy": "npm run css-build && npm run css-postcss",
    "css-build": "node-sass resources/main.scss resources/dist/main.css",
    "css-postcss": "postcss --use autoprefixer --output public/css/main.css resources/dist/main.css",
    "css-watch": "npm run css-build -- --watch",
    "deploy": "npm run css-deploy"
  },
  "dependencies": {
    "autoprefixer": "^7.1.5",
    "axios": "^0.18.0",
    "bulma": "^0.6.2",
    "node-sass": "^4.5.3",
    "postcss-cli": "^4.1.1",
    "vue": "^2.5.13",
    "vue-router": "^3.0.1",
    "web3": "^1.0.0-beta.33"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.0-beta.6",
    "@vue/cli-plugin-eslint": "^3.0.0-beta.6",
    "@vue/cli-service": "^3.0.0-beta.6",
    "vue-template-compiler": "^2.5.13"
  },
  "babel": {
    "presets": [
      "@vue/app"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ]
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
